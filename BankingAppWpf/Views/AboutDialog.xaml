<Window x:Class="BankingAppWpf.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About BankingApp"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="BankingApp WPF"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#FF2C3E50" />
                <TextBlock Text="Version 1.0.0"
                           FontSize="14"
                           Foreground="#FF7F8C8D" />
            </StackPanel>
        </StackPanel>

        <!-- Credentials -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Dev info -->
                <Border Background="#FFECF0F1"
                        BorderBrush="#FFBDC3C7"
                        BorderThickness="1"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Developed By:"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Foreground="#FF2C3E50"
                                   Margin="0,0,0,10" />
                        <TextBlock Text="Quentin Bökenkamp"
                                   FontSize="14"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="Junior Software Developer"
                                   FontSize="12"
                                   Foreground="#FF7F8C8D" />
                        <TextBlock Text="Email: 20quentin05@gmail.com"
                                   FontSize="12"
                                   Margin="0,5,0,0"
                                   Cursor="Hand"
                                   Foreground="#FF0066CC"
                                   TextDecorations="Underline"
                                   MouseLeftButtonDown="EmailTextBlock_MouseLeftButtonDown">
                            <TextBlock.ToolTip>
                                <ToolTip Content="E-Mail senden an 20quentin05@gmail.com" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBlock Text="Tel: +49 1590 1083618"
                                   FontSize="12" />
                    </StackPanel>
                </Border>

                <!-- Techstack -->
                <Border Background="#FFE8F6F3"
                        BorderBrush="#FFA3E4D7"
                        BorderThickness="1"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Technical Information:"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Foreground="#FF2C3E50"
                                   Margin="0,0,0,10" />
                        <TextBlock Text="• .NET 9.0 / WPF"
                                   FontSize="12" />
                        <TextBlock Text="• MVVM Pattern"
                                   FontSize="12" />
                        <TextBlock Text="• Entity Framework Core"
                                   FontSize="12" />
                        <TextBlock Text="• MySQL Database"
                                   FontSize="12" />
                        <TextBlock Text="• Spent approximately 2 hours and 30 minutes"
                                   FontSize="12" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Separator -->
        <Separator Grid.Row="2"
                   Background="#FFBDC3C7"
                   Margin="0,15,0,10" />

        <!-- OK Button -->
        <StackPanel Grid.Row="3"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Content="OK"
                    Click="OkButton_Click"
                    Background="#FF3498DB"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="20,8" />
        </StackPanel>
    </Grid>
</Window>