<Window x:Class="BankingAppWpf.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BankingAppWpf.ViewModels"
        xmlns:local="clr-namespace:BankingAppWpf.Views"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF0F0F0">

    <Window.Resources>
    
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- First name -->
                <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="Vorname *" />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Text="{Binding Customer.FirstName, UpdateSourceTrigger=PropertyChanged}"
                         x:Name="FirstNameTextBox" />

                <!-- Last name -->
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Nachname *" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Text="{Binding Customer.LastName, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Street -->
                <Label Grid.Row="2"
                       Grid.Column="0"
                       Content="Straße *" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Text="{Binding Customer.Street, UpdateSourceTrigger=PropertyChanged}" />

                <!-- House number -->
                <Label Grid.Row="3"
                       Grid.Column="0"
                       Content="Hausnummer" />
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Text="{Binding Customer.HouseNumber, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="10" />

                <!-- Zip code -->
                <Label Grid.Row="4"
                       Grid.Column="0"
                       Content="PLZ *" />
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         Text="{Binding Customer.PostalCode, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="10" />

                <!-- City -->
                <Label Grid.Row="5"
                       Grid.Column="0"
                       Content="Ort *" />
                <TextBox Grid.Row="5"
                         Grid.Column="1"
                         Text="{Binding Customer.City, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Phone -->
                <Label Grid.Row="6"
                       Grid.Column="0"
                       Content="Telefon" />
                <TextBox Grid.Row="6"
                         Grid.Column="1"
                         Text="{Binding Customer.Phone, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="20" />

                <!-- E-Mail -->
                <Label Grid.Row="7"
                       Grid.Column="0"
                       Content="E-Mail" />
                <TextBox Grid.Row="7"
                         Grid.Column="1"
                         Text="{Binding Customer.Email, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1"
                Background="LightGray"
                Padding="5"
                Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="{Binding SaveButtonText}"
                        Command="{Binding SaveCommand}"
                        Background="#FF008000"
                        Foreground="White"
                        FontWeight="Bold" />

                <Button Content="Abbrechen"
                        Command="{Binding CancelCommand}"
                        Background="#FFDC143C"
                        Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</Window>